<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.calculatorloise"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.calculatorloise.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.calculatorloise.WelcomeScreen"
            android:label="@string/title_activity_welcome_screen" >
        </activity>
        <activity
            android:name="com.example.calculatorloise.LoginScreen"
            android:label="@string/title_activity_login_screen" >
        </activity>
        <activity
            android:name="com.example.calculatorloise.RegisterScreen"
            android:label="@string/title_activity_register_screen" >
        </activity>
        <activity
            android:name="com.example.calculatorloise.HomeScreen"
            android:label="@string/title_activity_home_screen" >
        </activity>
    </application>

</manifest>
